@model FoodECommerce.Models.Product

@{
    ViewData["Title"] = "Ürün Detayı";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6">
            <img src="/@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h2 class="fw-bold">@Model.Name</h2>
            <p class="mt-3">@Model.Description</p>
            <h4 class="text-danger fw-bold">@Model.Price.ToString("C")</h4>

            <form method="post" asp-controller="Cart" asp-action="Add" asp-route-productId="@Model.Id">
                <button type="submit" class="btn btn-success rounded-pill px-4 mt-3">Sepete Ekle</button>
            </form>
        </div>
        
    </div>
</div>
