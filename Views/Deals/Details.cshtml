@model FoodECommerce.Models.Deal
@{
    ViewData["Title"] = "Kampanya Detayı";
}
<div class="container py-5">
    <div class="row">
        <div class="col-md-6">
            <img src="/@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Title" />
        </div>
        <div class="col-md-6">
            <h2 class="fw-bold">    
                @Model.Title
            </h2>   
            <p class="mt-3">
                @Model.Description
            </p>
           
        </div>
         <a href="/Deals" class="btn btn-secondary mt-3">← Kampanyalara Dön</a>
    </div>  
    

